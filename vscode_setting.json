{
    // ===================== Python =====================
    "python.defaultInterpreterPath": "${workspaceFolder}/venv",
    "python.interpreter.infoVisibility": "onPythonRelated",
    "python.terminal.activateEnvironment": true,
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.venvPath": "./venv",
    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    "python.analysis.completeFunctionParens": true,
    "python.analysis.autoImportCompletions": false,
    "python.analysis.diagnosticMode": "openFilesOnly",
    "python.analysis.autoSearchPaths": true,
    "python.analysis.autoFormatStrings": true,
    "python.analysis.importFormat": "absolute",
    "python.analysis.autoIndent": true,
    "python.analysis.exclude": [
        ".git", 
        "**/__pycache__",
        "venv",
    ],
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.python",
    },
    // ===================== Golang =====================
    "go.useLanguageServer": true,
    "go.coverOnTestPackage": false,
    "go.enableCodeLens": {
        "runtest": false
    },
    "go.lintTool": "golint",
    "go.lintOnSave": "off",
    "go.formatTool": "gofmt",
    "go.showWelcome": false,
    // ===================== 关闭自动更新/升级 =====================
    "update.enableWindowsBackgroundUpdates": false,
    "update.showReleaseNotes": false,
    "update.mode": "none",
    "extensions.autoCheckUpdates": false,
    "extensions.autoUpdate": false,
    "extensions.ignoreRecommendations": true,
    // ===================== Markdown ================================
    // "markdown.preview.scrollEditorWithPreview": false,
    // "markdown.preview.scrollPreviewWithEditor": true,
    // "markdown.updateLinksOnFileMove.enableForDirectories": false,

    // ============ Visuals And Editor ========================
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "expand",
    "editor.autoClosingBrackets": "beforeWhitespace",
    "editor.autoClosingDelete": "always",
    "editor.autoClosingOvertype": "always",
    "editor.autoClosingQuotes": "beforeWhitespace",
    "editor.detectIndentation": false,
    "editor.suggestSelection": "first",
    "editor.unicodeHighlight.invisibleCharacters": false,
    "editor.stickyScroll.enabled": true,
    "editor.fontFamily": "'Fria Code', Consolas, 'Operator Mono'",
    "editor.fontWeight": "550",
    "editor.lineNumbers": "on",
    "editor.tabSize": 4,
    "editor.wordWrap": "on",
    "editor.renderLineHighlight": "line",
    "editor.lineHeight": 22,
    "editor.fontSize": 13,
    "editor.roundedSelection": false,
    "editor.fontLigatures": true,
    "editor.guides.bracketPairs": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.mouseWheelZoom": true,
    "editor.experimental.asyncTokenization": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    // "editor.codeActionsOnSave": {
    //     "source.organizeImports": "explicit",
    // },
    "files.insertFinalNewline": true,
    "files.simpleDialog.enable": true,
    // "files.exclude": {
    //     "**/__pycache__": true,
    //     "**/.git": true,
    //     "**/.idea": true,
    //     "**/.pyc": true,
    //     "**/.vscode": true,
    // },
    "files.refactoring.autoSave": false,
    "workbench.list.smoothScrolling": true,
    "workbench.editor.tabActionLocation": "right",
    "workbench.sideBar.location": "left",
    "workbench.tree.expandMode": "singleClick",
    "workbench.tree.indent": 10,
    "workbench.startupEditor":"newUntitledFile",
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.editor.enablePreview": false,
    "workbench.iconTheme": "vscode-icons",
    "workbench.editor.empty.hint": "hidden",
    "workbench.colorTheme": "Visual Studio Light",
    "security.workspace.trust.startupPrompt": "never",
    "security.workspace.trust.enabled": false,
    "terminal.integrated.fontSize": 13,
    "terminal.integrated.confirmOnExit": "always",
    "terminal.integrated.allowChords": false,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.cursorStyle": "line",
    "terminal.integrated.fontWeight": "300",
    "terminal.integrated.persistentSessionReviveProcess": "never",
    "terminal.integrated.tabs.enabled": true,
    "terminal.external.windowsExec": "C:/Windows/System32/cmd.exe",
    "terminal.integrated.fontFamily": "Consolas",
    "terminal.integrated.gpuAcceleration": "off",
    "terminal.integrated.customGlyphs": false,
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    //
    "settingsSync.keybindingsPerPlatform": false,
    "task.autoDetect": "off",
    "remote.autoForwardPorts": false,
    "debug.console.fontFamily": "'Operator Mono Bold', Consolas",
    "notebook.compactView": true,
    "vsicons.dontShowNewVersionMessage": true,
    "search.followSymlinks": false,
    "window.zoomLevel": 0.3,
    "debug.console.fontSize": 13,
    // ======================== Git ========================
    "git.optimisticUpdate": false,
    "git.autofetchPeriod": 0,
    "git.autorefresh": false,
    "git.autoRepositoryDetection": false,
    "git.ignoreLegacyWarning": true,
    "git.enableSmartCommit": true,
    "git.autofetch": false,
    // ======================== Svn ========================
    "svn.showUpdateMessage": false,
    "svn.update.ignoreExternals": false,
    // ======================== vim ========================
    "vim.easymotionMarkerFontWeight": "",
    "vim.easymotion": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        }
    ],
    "vim.leader": "<space>",
    "vim.handleKeys": {
        "<C-a>": false,
        "<C-f>": false
    },
    // ======================== Disabled ========================
    "less.format.enable": false,
    "less.format.newlineBetweenRules": false,
    "less.format.newlineBetweenSelectors": false,
    "less.format.preserveNewLines": false,
    "javascript.format.enable": false,
    "typescript.format.enable": false,
    "css.format.enable": false,
    "css.format.newlineBetweenRules": false,
    "css.format.newlineBetweenSelectors": false,
    "css.format.preserveNewLines": false,
    "scss.format.enable": false,
    "scss.format.newlineBetweenRules": false,
    "scss.format.newlineBetweenSelectors": false,
    "scss.format.preserveNewLines": false,
    "html.format.enable": false,
    "html.format.preserveNewLines": false,
    "html.autoCreateQuotes": false,
    "html.autoClosingTags": false,
}

